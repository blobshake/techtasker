<p id="notice"><%= notice %></p>

<div id="videoheadline">
  <h1> <%= @video.headline %> </h1>
</div>

<p>
<iframe id="ytplayer" type="text/html" width="640" height="390"
  src="http://www.youtube.com/embed/<%= @video.youtubeid %>"
  frameborder="0"/>
  </iframe>
</p>

<div id="sharemodule">
  <%= link_to "https://www.facebook.com/sharer/sharer.php?u=#{request.original_url}" do %>

<div id="fbshare">
  Share on Facebook
</div>
  <% end %>
  <%= link_to "https://twitter.com/share?text=#{@video.headline}" do %>
<div id="twittershare">
  Share on Twitter
</div>
 <% end %>
 
</div>
 
